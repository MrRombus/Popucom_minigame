{
  "compilerOptions": {
    "strict": true,
    "noImplicitOverride": true,
    "sourceMap": true,
    "module": "nodenext",
    "target": "es2024",
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "outDir": "./build"
  }
}
